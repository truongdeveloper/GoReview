
@using GoReview.Models
@model User

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="vh-100">
    <div class="container-fluid">
        <div class="row container border">
            <div class="col-sm-6 text-black">

                <div class="px-5 ms-xl-4">
                    <i class="fas fa-crow fa-2x me-3 pt-5 mt-xl-4" style="color: #709085;"></i>
                    <span class="h1 fw-bold mb-0">Logo</span>
                </div>

                <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">
                    @using (Html.BeginForm("Login", "Authen", FormMethod.Post))
                    {

                        @if (ViewBag.LoginStatus == 0 && ViewBag.LoginStatus != null)
                        {
                            <p class="text-center text-danger"> incorrect email or password, please try againt</p>
                        }
                        <h3 class="fw-normal text-center mb-3 pb-3" style="letter-spacing: 1px;">Log in</h3>
                        <div class="flex-column form-outline mb-4">
                            <p class="form-label mb-2 fw-bold" for="form2Example18">Email address</p>
                            @Html.TextBoxFor(m => m.UserEmail,new {@placeholder="email address"})
                        </div>
                        <div class="flex-column form-outline mb-4">
                            <p class="form-label mb-2 fw-bold " for="form2Example28">Password</p>

                            @Html.TextBoxFor(m=>m.UserPassword,new {@placeholder="password"})
                        </div>
                        <div class="pt-1 mb-4">
                            <button class="btn btn-outline-primary align-content-center" type="submit">Login</button>
                        </div>
                        <p>Don't have an account? <a href="" class="text-success">Register here</a></p>
                    }
                </div>

            </div>
            <div class="col-sm-6 px-0 d-none d-sm-block">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img3.webp"
                     alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
            </div>
        </div>
    </div>
</section>

