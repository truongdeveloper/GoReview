@model IEnumerable<GoReview.Models.Category>


<div class="shortcut-links">

    <p class="text-center fw-bold text-danger"> Category</p>
    @foreach (var item in Model)
    {
        <a href="~/Posts/PostbyCategory?CatID=@item.CategoryId">
            <img src="@item.Image">
            @item.Title
        </a>
    }
</div>
